def fibonacci(n):
if n <= 0:
raise ValueError("Input value must be a positive integer.")

# Base cases for the Fibonacci sequence
if n == 1:
    return 0
elif n == 2:
    return 1
else:
    # Recursive calculation of the Fibonacci sequence
    return fibonacci(n - 1) + fibonacci(n - 2)
try:
# Get input from the user
n = int(input("Enter a positive integer (N>0): "))

# Check if the input is a positive integer
if n < 0:
    print("Invalid input. Please enter a positive integer.")
else:
    # Calculate and display the N-th term in the Fibonacci sequence
    result = fibonacci(n)
    print("The (n)-th term in the Fibonacci sequence is:", result)
except ValueError:
print("Invalid input. Please enter a valid integer.")
